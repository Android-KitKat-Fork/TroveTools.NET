            <!-- Replaces -->
            <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3">
                <Bold>Mod Replaces:</Bold>
            </TextBlock>
            <wpf:HtmlLabel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding Replaces, Converter={StaticResource NullValueConverter}, ConverterParameter='Unspecified'}" AutoSizeHeightOnly="True"/>
        </Grid>
    </ScrollViewer>
</UserControl>
