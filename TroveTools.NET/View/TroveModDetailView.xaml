                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <wpf:HtmlLabel Text="{Binding Changes}" AutoSizeHeightOnly="True"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Downloads" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Downloads, Mode=OneWay, StringFormat=N0}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Created" Width="150">
                            <GridViewColumn.CellTemplate>
